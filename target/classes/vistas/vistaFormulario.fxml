<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400" prefWidth="600" spacing="20" styleClass="root" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controladores.vistaFormularioController">
    <stylesheets>
        <URL value="@../styles/stylesBotones.css" />
    </stylesheets>

    <Label styleClass="title" text="Registro de consultor" />

    <GridPane alignment="CENTER" hgap="10" prefHeight="258.0" prefWidth="503.0" vgap="10">
        <TextField fx:id="id" prefWidth="200" promptText="Codigo" GridPane.rowIndex="1" />
        <HBox alignment="CENTER" spacing="10" GridPane.rowIndex="3">
            <TextField fx:id="apellidoMaterno" prefHeight="25.0" prefWidth="257.0" promptText="Apellido Materno" />
            <TextField fx:id="apellidoPaterno" prefWidth="250" promptText="Apellido Paterno" />
        </HBox>
        <TextField fx:id="direccionField" prefWidth="510" promptText="Direccion" GridPane.rowIndex="9" />
        <TextField fx:id="emailField" prefHeight="3.0" prefWidth="517.0" promptText="Correo" GridPane.rowIndex="5" />
        <TextField fx:id="telefonoField" prefWidth="200" promptText="Telefono" GridPane.rowIndex="6" />
        <PasswordField fx:id="passwordField" prefWidth="510" promptText="Contrasena" GridPane.rowIndex="7" />
        <PasswordField fx:id="confirmPasswordField" prefWidth="510" promptText="Confirmar Contrasena" GridPane.rowIndex="8" />
        <TextField fx:id="nombre" prefWidth="250" promptText="Nombre" GridPane.rowIndex="2" />
        <columnConstraints>
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         <RowConstraints />
        </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER" spacing="20">
        <Button onAction="#btnAgregar" styleClass="button" text="Agregar" />
        <Button onAction="#btnRegresar" styleClass="button" text="Regresar" />
    </HBox>
</VBox>
